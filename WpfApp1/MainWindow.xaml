<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="UploadButton" Content="Upload Image and Transform" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Click="UploadButton_Click"/>
        <Button Content="Save Image" Width="100" Height="30" Margin="10" Click="SaveImage_Click"/>
        <Image Name="ImageDisplay" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Width="500" Height="250"/>
    </Grid>
</Window>
